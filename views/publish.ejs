<% include header %>
<% include top-bar %>
<div class="container">
  <form class="form-horizontal goods" method="post" action="/upload">
    <div class="form-group">
      <label class="col-sm-2 control-label">物品名称</label>
      <div class="col-sm-8">
        <input id="gname" name='gname' class="form-control" type="text" placeholder="物品名称">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">学校</label>
      <div class="col-sm-8">
        <input id="school" name="school" class="form-control" type="text" placeholder="请填写完整的大学名称">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">分类</label>
      <div class="col-sm-8">
        <select class="form-control" name="category">
          <option></option>
          <option value="二手电脑">二手电脑</option>
          <option value="二手手机">二手手机</option>
          <option value="数码产品">数码产品</option>
          <option value="生活用品">生活用品</option>
          <option value="小家电">小家电</option>
          <option value="图书/音像">图书/音像</option>
          <option value="文体用品">文体用品</option>
          <option value="其他">其他</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">交易方式</label>
      <div class="col-sm-8">
        <input type="radio" name="way" value="以物换物">
        <label>以物换物</label>
        &#x3000;&#x3000;&#x3000;&#x3000;
        <input type="radio" name="way" value="二手出售">
        <label>二手出售</label>
      </div>
    </div>
    <div class="form-group qd-goods js-qd-goods">
      <label class="col-sm-2 control-label">期望物品</label>
      <div class="col-sm-8">
        <input id="goods" name="ex_goods" class="form-control" type="text" placeholder="请填写你期望交换到的物品">
      </div>
    </div>
    <div class="form-group qd-price js-qd-price">
      <label class="col-sm-2 control-label">价格</label>
      <div class="col-sm-8">
        <input id="price" name="ex_price" class="form-control " type="text" placeholder="请输入价格">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">详细说明</label>
      <div class="col-sm-8">
        <textarea class="form-control" name="description" rows="6" placeholder="​10-2000个字，不能填写电话、QQ、微信、邮箱等联系方式或特殊符号"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">物品图片</label>
      <div class="col-sm-8">
        <input class="form-control" type="file" name="img">
        <span id="helpBlock" class="help-block">上传的图片不能包含有文字、数字、网址、名片等，最多上传12张，每张最大10M</span>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-8">
        <input class="btn btn-warning col-sm-12 col-xs-12" type="submit" value="发布">
      </div>
    </div>
  </form>
</div>
<script>
  $('.publish').addClass('active');
</script>
<% include footer %>